<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="activitie_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="activities.layout">

                        <div class="oe_structure"/>
                        <div class="page">
                            <div class="row">
                                <div class="col-7 offset-2 text-center">
                                    <h5>ISP | Security Solutions for CDA</h5>
                                    <h5>Rapport d'Evènement</h5>
                                    <br/>
                                </div>
                            </div>
                            <div class="row mt16">
                                <table class="table table-bordered">
                                    <tr style="background-color:#aeacac;height: 60px;">
                                        <td colspan="2" class="text-center" style="valign:center;">
                                            Evènement : <span t-field="doc.type_activitie_id"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="row mt16">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <td style="border-bottom:None;border-top:None;padding:6px 2px 2px 8px;">
                                                <strong>
                                                    Status : <span t-field="doc.state"/>
                                                </strong>
                                            </td>
                                            <td style="border-bottom:None;border-top:None;padding:6px 2px 2px 8px;">
                                                <strong>
                                                    Nom : <span t-field="doc.name"/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-bottom:None;border-top:None;padding:6px 2px 2px 8px;">
                                                Description courte:
                                                <t t-if="doc.type_activitie_short_desc_id">
                                                    <span t-field="doc.type_activitie_short_desc_id"/>
                                                </t>
                                                <t t-else="">N/C</t>
                                            </td>
                                            <td style="border-bottom:None;border-top:None;padding:6px 2px 2px 8px;"></td>
                                        </tr>
                                        <tr style="page-break-inside: avoid !important;">
                                            <td colspan="2"
                                                style="padding:6px 2px 2px 8px;page-break-inside: avoid !important;">
                                                <p>
                                                    <t t-if="doc.site">
                                                        Site : <span t-field="doc.site"/>
                                                    </t>

                                                    <t t-if="doc.access_point">
                                                        <br/>Point d'Accès : <span t-field="doc.access_point"/>
                                                    </t>

                                                    <t t-if="doc.lieu_id">
                                                        <br/>Lieu : <span t-field="doc.lieu_id"/>
                                                    </t>

                                                    <t t-if="doc.navire_id">
                                                        <br/>Navire : <span t-field="doc.navire_id"/>
                                                    </t>

                                                    <t t-if="doc.tag_id">
                                                        <br/>Tag : <span t-field="doc.tag_id"/>
                                                    </t>
                                                </p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="row">
                                <h5 style="text-decoration: underline;">Actions<br/></h5>
                            </div>
                            <div class="row">
                                <p><span t-field="doc.actions"/></p>
                            </div>

                            <t t-set="attachment_ids" t-value="doc.get_attachment_ids()"/>
                            <t t-if="attachment_ids">
                                <div class="row">
                                    <p class="text-center">
                                        <span style="font-weight: bold !important;text-decoration: underline;">
                                            <strong>Pièces jointes:</strong>
                                        </span>
                                        <br/>
                                    </p>
                                </div>
                                <t t-foreach="attachment_ids" t-as="attach">
                                    <t t-if="attach.image_src">
                                        <p>
                                            <span t-field="attach.name"/>
                                            <br/>
                                        </p>
                                        <p>
                                            <img t-att-src="attach.image_src" width="600" height="400"/>
                                            <br/>
                                        </p>
                                    </t>
                                </t>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="action_activitie_report" model="ir.actions.report">
            <field name="name">Activité</field>
            <field name="model">cna.activitie</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">activities.activitie_report_template</field>
            <field name="report_file">activities.activitie_report_template</field>
            <field name="print_report_name">('Activité - %s' % (object.name))</field>
            <field name="binding_model_id" ref="activities.model_cna_activitie"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>