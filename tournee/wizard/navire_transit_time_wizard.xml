<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="navire_transit_time_wizard_form" model="ir.ui.view">
        <field name="name">navire.transit.time.wizard.form</field>
        <field name="model">navire.transit.time.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="is_graphique" widget="boolean_toggle"/>
                    <field name="type" attrs="{'invisible':[('is_graphique','=', True)]}"/>
                    <field name="date_start"/>
                    <field name="date_end" force_save="1" attrs="{'invisible':[('is_graphique','=', True)]}"/>
                    <field name="end_date" force_save="1" attrs="{'invisible':[('is_graphique','=', False)], 'required':[('is_graphique','=', True)]}"/>
                    <field name="navire_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button attrs="{'invisible':[('is_graphique','=', True)]}" string="Générer" name="generate_report" type="object" class="oe_highlight"/>
                    <button attrs="{'invisible':[('is_graphique','=', False)]}" string="Temps de passage graphique" name="generate_xlsx_report" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="navire_transit_time_wizard_action" model="ir.actions.act_window">
        <field name="name">Temps de passage par semaine</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">navire.transit.time.wizard</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="activities.model_navire_navire"/>
        <field name="binding_type">report</field>
        <field name="target">new</field>
    </record>
</odoo>
