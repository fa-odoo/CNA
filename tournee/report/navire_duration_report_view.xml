<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="navire_duration_report_document">
        <t t-call="web.html_container">
            <div class="page">
                <h4 class="text-center">Rapport des temps de passage du
                    <span t-esc="start_date"/>
                    au
                    <span t-esc="end_date"/>
                </h4>
                <div class="row mt16">
                    <table class="table table-bordered">
                        <tr>
                            <td/>
                            <t t-foreach="months_data" t-as="year">
                                <td style="text-align:center;" t-att-colspan="len(months_data[year])">
                                    <span t-esc="year" class="font-weight-bold"/>
                                </td>
                            </t>
                        </tr>
                        <tr>
                            <td/>
                            <t t-foreach="months_data" t-as="year">
                                <t t-foreach="months_data[year]" t-as="month">
                                    <td style="text-align:center;">
                                        <span t-esc="month" class="font-weight-bold"/>
                                    </td>
                                </t>
                            </t>
                        </tr>
                        <t t-foreach="duration_data" t-as="duration">
                            <tr t-att-style="'background-color: %s;' % duration_data[duration]['color']">
                                <td>
                                    <span class="font-weight-bold" t-esc="duration.name"/>
                                </td>
                                <t t-foreach="duration_data[duration]['org']" t-as="org">
                                    <td style="text-align:center;">
                                        <span t-esc="org"/>
                                    </td>
                                </t>
                            </tr>
                            <tr t-att-style="'background-color: %s;' % duration_data[duration]['color']">
                                <td>Théorique</td>
                                <t t-foreach="duration_data[duration]['theoretical_duration']" t-as="theoretical_duration">
                                    <td style="text-align:center;">
                                        <span t-esc="theoretical_duration" t-options='{"widget": "float_time"}'/>
                                    </td>
                                </t>
                            </tr>
                            <tr t-att-style="'background-color: %s;' % duration_data[duration]['color']">
                                <td>Réelle</td>
                                <t t-foreach="duration_data[duration]['real_duration']" t-as="real_duration">
                                    <td style="text-align:center;">
                                        <span t-esc="real_duration" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </t>
                            </tr>
                            <tr t-att-style="'background-color: %s;' % duration_data[duration]['color']">
                                <td>%</td>
                                <t t-foreach="duration_data[duration]['percent_duration']" t-as="percent_duration">
                                    <td style="text-align:center;">
                                        <span t-esc="percent_duration" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </table>
                </div>
            </div>
        </t>
    </template>
    <template id="navire_duration_report_tmp">
        <t t-call="web.internal_layout">
            <t t-call="tournee.navire_duration_report_document"/>
        </t>
    </template>
    <record id="action_report_navire_duration" model="ir.actions.report">
        <field name="name">Durée Navire report</field>
        <field name="model">navire.duration.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tournee.navire_duration_report_tmp</field>
        <field name="report_file">tournee.navire_duration_report_tmp</field>
        <field name="paperformat_id" ref="tournee.navire_duration_paperformat"/>
    </record>
</odoo>
