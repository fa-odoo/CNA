<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_create_navire_time_lines" model="ir.cron">
            <field name="name">Navire: Creation des ligne de temps de passage</field>
            <field name="model_id" ref="tournee.model_navire_time"/>
            <field name="state">code</field>
            <field name="code">model._cron_create_lines()</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=2, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>